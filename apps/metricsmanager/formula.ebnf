(* EBNF definition of a formula used to compute a metric *)

formula     = expression $ ;

expression  = term { ( "+" | "-")  term } ;

term        = factor { ( "*" | "/") factor } ;

factor      =
            application |
            constant |
            variable |
            "(" expression ")";

application = name "(" expression { "," expression }* ")" ;

name        = /[A-Za-z]+/ ;

variable    = /__[0-9]+__/ ;

constant    = /-?[0-9]+(\.[0-9]+)?(e[0-9]+)?/ ;
